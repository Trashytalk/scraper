# Security Audit Configuration Template  
# Optimized for OSINT and security reconnaissance

# Basic Configuration
API_KEY=your_security_audit_key
DATABASE_URL=sqlite:///security_audit.db

# OSINT API Keys
SHODAN_API_KEY=your_shodan_api_key
CENSYS_API_KEY=your_censys_api_key
VIRUSTOTAL_API_KEY=your_virustotal_key
HUNTER_API_KEY=your_hunter_io_key

# Proxy Configuration (essential for security audits)
PROXY_URL=your_secure_proxy_url
PROXY_ROTATION=true
PROXY_PROVIDER=tor_proxies

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/3
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# Security Configuration
USE_HTTPS=true
ALLOWED_ORIGINS=https://secure.yourdomain.com
JWT_SECRET=your_ultra_secure_jwt_secret
JWT_ALGORITHM=HS256

# Conservative scraping for security work
DOWNLOAD_DELAY=10
CONCURRENT_REQUESTS=2
RANDOMIZE_DOWNLOAD_DELAY=5
USER_AGENT=SecurityAuditBot

# Security Audit Specific
TARGET_DOMAINS=target1.com,target2.com
SCAN_DEPTH=comprehensive
INCLUDE_SUBDOMAINS=true
CHECK_SSL=true
CHECK_PORTS=true
CHECK_VULNERABILITIES=true

# OSINT Tools Configuration
ENABLE_SPIDERFOOT=true
ENABLE_THEHARVESTER=true
ENABLE_SHODAN=true
ENABLE_NMAP=true
ENABLE_SUBFINDER=true
ENABLE_SHERLOCK=true

# Data Sensitivity
ENCRYPT_DATA=true
SECURE_DELETE=true
RETENTION_DAYS=30

# Logging & Alerts
LOG_LEVEL=DEBUG
LOG_ENCRYPTION=true
ALERT_WEBHOOK=your_slack_webhook_url
ANOMALY_DETECTION=true

# Cache Configuration (security focused)
CACHE_BACKEND=encrypted_filesystem
CACHE_DIR=secure_cache/
CACHE_EXPIRE=1800

# Compliance & Ethics
RESPECT_ROBOTS_TXT=true
RATE_LIMIT_STRICT=true
LEGAL_DISCLAIMER=true
AUDIT_TRAIL=true
