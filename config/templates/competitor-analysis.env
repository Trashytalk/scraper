# Competitor Analysis Configuration Template
# Optimized for competitive intelligence gathering

# Basic Configuration
API_KEY=your_competitor_analysis_key
DATABASE_URL=sqlite:///competitor_analysis.db

# External APIs for competitor research
GOOGLE_API_KEY=your_google_api_key
CLEARBIT_API_KEY=your_clearbit_key
SIMILAR_WEB_API_KEY=your_similarweb_key

# Proxy Configuration (recommended for competitor analysis)
PROXY_URL=your_proxy_service_url
PROXY_ROTATION=true
PROXY_PROVIDER=rotating_proxies

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Security
USE_HTTPS=true
ALLOWED_ORIGINS=https://yourdomain.com
JWT_SECRET=your_secure_jwt_secret_for_competitor_analysis
JWT_ALGORITHM=HS256

# Aggressive scraping settings for competitor analysis
DOWNLOAD_DELAY=5
CONCURRENT_REQUESTS=4
RANDOMIZE_DOWNLOAD_DELAY=2
USER_AGENT=Mozilla/5.0 (compatible; CompetitorResearchBot)

# Stealth mode
STEALTH_MODE=true
BROWSER_ROTATION=true
IP_ROTATION=true

# Competitor Specific Configuration
TARGET_COMPETITORS=company1.com,company2.com,company3.com
ANALYSIS_DEPTH=deep
MONITOR_FREQUENCY=daily

# Data Collection Focus
TRACK_PRICING=true
TRACK_PRODUCTS=true
TRACK_NEWS=true
TRACK_SOCIAL_MEDIA=true
TRACK_JOB_POSTINGS=true
TRACK_PATENTS=true

# Logging & Monitoring
LOG_LEVEL=WARNING
LOG_FORWARD_URL=your_log_aggregator_url
ALERT_EMAIL=alerts@yourcompany.com

# Cache Configuration
CACHE_BACKEND=redis
CACHE_REDIS_URL=redis://localhost:6379/2
CACHE_EXPIRE=3600

# Data Export & Reporting
EXPORT_FORMATS=csv,json,pdf
AUTO_REPORTS=true
REPORT_FREQUENCY=weekly
REPORT_EMAIL=reports@yourcompany.com
