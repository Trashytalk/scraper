# Business Research Configuration Template
# Optimized for company and market research

# Basic Configuration
API_KEY=your_research_api_key_here
DATABASE_URL=sqlite:///business_research.db

# External APIs
GOOGLE_API_KEY=your_google_api_key
PROXY_URL=

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security & Rate Limiting
USE_HTTPS=false
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256

# Scraping Configuration
DOWNLOAD_DELAY=2
CONCURRENT_REQUESTS=8
RANDOMIZE_DOWNLOAD_DELAY=0.5
USER_AGENT=business-research-bot

# Logging
LOG_LEVEL=INFO
LOG_FORWARD_URL=

# Cache Configuration
CACHE_BACKEND=filesystem
CACHE_DIR=cache/business_research
CACHE_EXPIRE=7200

# Business Research Specific
COMPANY_DATABASES=crunchbase,reuters,bloomberg
INDUSTRY_FOCUS=technology,finance,healthcare
GEOGRAPHIC_SCOPE=global

# Data Export
EXPORT_FORMATS=csv,json,excel
AUTO_BACKUP=true
BACKUP_INTERVAL=daily
