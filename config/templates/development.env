# Development & Testing Configuration Template
# Optimized for local development and testing

# Basic Configuration
API_KEY=dev_api_key_123
DATABASE_URL=sqlite:///development.db

# Development APIs (use test keys)
GOOGLE_API_KEY=test_google_key
PROXY_URL=

# Local Development
CELERY_BROKER_URL=memory://
CELERY_RESULT_BACKEND=cache+memory://

# Security (relaxed for development)
USE_HTTPS=false
ALLOWED_ORIGINS=*
JWT_SECRET=dev_secret_not_for_production
JWT_ALGORITHM=HS256

# Fast development settings
DOWNLOAD_DELAY=0.5
CONCURRENT_REQUESTS=16
RANDOMIZE_DOWNLOAD_DELAY=0
USER_AGENT=development-scraper

# Development Features
DEBUG_MODE=true
AUTO_RELOAD=true
VERBOSE_LOGGING=true
MOCK_EXTERNAL_APIS=true

# Testing Configuration
TEST_MODE=true
MOCK_RESPONSES=true
FAST_TESTS=true
SKIP_SLOW_TESTS=false

# Local Data
USE_LOCAL_DATA=true
SAMPLE_DATA_SIZE=100
TEST_DOMAINS=httpbin.org,example.com

# Logging
LOG_LEVEL=DEBUG
LOG_TO_CONSOLE=true
LOG_TO_FILE=false

# Cache (minimal for development)
CACHE_BACKEND=memory
CACHE_EXPIRE=300

# Development Tools
ENABLE_PROFILING=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_MOCK_RESPONSES=true
