# Environment Configuration Template
# Copy this to .env and modify for your deployment

# Environment Setting (development, production)
ENVIRONMENT=development

# API Configuration
API_HOST=localhost
API_PORT=8000

# Frontend Configuration
FRONTEND_HOST=localhost
FRONTEND_PORT=5173

# Database Configuration
DATABASE_URL=sqlite:///data.db

# Security Configuration (CRITICAL: Change these in production)
DEFAULT_USERNAME=admin
DEFAULT_PASSWORD=admin123
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRE_HOURS=24

# Performance Configuration
MAX_PAGES_DEFAULT=50
MAX_DEPTH_DEFAULT=3
REQUEST_TIMEOUT=30

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=60
METRICS_RETENTION_HOURS=24

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# Production Security Warning
# ⚠️  IMPORTANT: In production, you MUST change:
# - DEFAULT_PASSWORD (use a strong password)
# - JWT_SECRET (use a secure random string)
# - Use HTTPS instead of HTTP for API_HOST
# - Consider using PostgreSQL instead of SQLite for DATABASE_URL
