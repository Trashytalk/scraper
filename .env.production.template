# Production Environment Configuration Template
# Copy this to .env.production and customize for your production environment

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Application Environment
NODE_ENV=production
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Security Settings
SECRET_KEY=your-super-secure-secret-key-256-bits-minimum
JWT_SECRET=your-jwt-secret-key-256-bits-minimum
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=your-encryption-key-256-bits-minimum

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary Database (PostgreSQL for production)
DATABASE_URL=postgresql://username:password@localhost:5432/business_intel_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_SSL_MODE=require

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password
REDIS_SSL=true
REDIS_CLUSTER=false

# =============================================================================
# WEB SERVER CONFIGURATION
# =============================================================================

# Backend API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=300

# Frontend Server
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=3000
FRONTEND_BUILD_PATH=/app/build

# Public URLs
API_BASE_URL=https://api.yourdomain.com
FRONTEND_BASE_URL=https://yourdomain.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Settings
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_STORAGE=redis

# Security Headers
HSTS_MAX_AGE=31536000
CSP_ENABLED=true
XSS_PROTECTION=true

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Application Monitoring
MONITORING_ENABLED=true
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_ENDPOINT=/health

# External Monitoring Services
NEW_RELIC_LICENSE_KEY=your-newrelic-key
DATADOG_API_KEY=your-datadog-key
SENTRY_DSN=https://your-sentry-dsn

# Logging Configuration
LOG_FORMAT=json
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30
LOG_MAX_SIZE=100MB

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================

# Caching
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=3600
CACHE_MAX_ENTRIES=10000
CACHE_COMPRESSION=true

# Performance Monitoring
PERFORMANCE_MONITORING=true
PERFORMANCE_METRICS_INTERVAL=60
PERFORMANCE_ALERT_THRESHOLD=5000

# =============================================================================
# SCRAPING CONFIGURATION
# =============================================================================

# Default Scraping Limits
DEFAULT_MAX_PAGES=1000
MAX_CONCURRENT_JOBS=10
JOB_TIMEOUT_MINUTES=60
REQUEST_DELAY_SECONDS=1

# Proxy Configuration
PROXY_ENABLED=false
PROXY_ROTATION=false
TOR_ENABLED=false

# =============================================================================
# EMAIL & NOTIFICATIONS
# =============================================================================

# SMTP Configuration
SMTP_HOST=smtp.yourmailserver.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_TLS=true

# Notification Settings
ADMIN_EMAIL=admin@yourdomain.com
ALERT_EMAIL=alerts@yourdomain.com
NOTIFICATION_ENABLED=true

# =============================================================================
# CLOUD STORAGE & SERVICES
# =============================================================================

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# File Storage
UPLOAD_MAX_SIZE=50MB
STORAGE_BACKEND=local  # local, s3, gcs
STATIC_FILES_CDN=https://cdn.yourdomain.com

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups/

# Data Export
EXPORT_ENABLED=true
EXPORT_FORMATS=json,csv,xlsx
EXPORT_MAX_RECORDS=100000

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================

# Audit Logging
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=365
AUDIT_EVENTS=login,logout,data_access,config_change

# GDPR Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=730
ANONYMIZATION_ENABLED=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Analytics Features
ANALYTICS_ENABLED=true
REAL_TIME_ANALYTICS=true
PREDICTIVE_ANALYTICS=false

# AI/ML Features
AI_FEATURES_ENABLED=false
ML_MODEL_PATH=/models/
GPU_ACCELERATION=false

# Experimental Features
BETA_FEATURES=false
FEATURE_FLAGS_ENABLED=true
